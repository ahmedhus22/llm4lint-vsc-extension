{
  "name": "llm4lint-vsc",
  "displayName": "llm4lint VSC",
  "description": "A Local LLM Linter, If you want to finetune with your own examples; Get the training script from https://github.com/ahmedhus22/llm4lint",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands":[
      {
        "command": "llm4lint-vsc.get_lints",
        "title": "Lint using LLM"
      },
      {
        "command": "llm4lint-vsc.init_shell",
        "title": "Lint in Interactive shell"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == python",
          "command": "llm4lint-vsc.get_lints"
        },
        {
          "when": "resourceLangId == python",
          "command": "llm4lint-vsc.init_shell"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
